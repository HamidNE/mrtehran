{
  "compilerOptions": {
    "rootDir": "src",
    "target": "ESNext",
    "module": "CommonJS",
    "declaration": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "got": ["./node_modules/got/dist/source"]
    }
  },
  "exclude": [
    ".idea",
    "dist",
    "node_modules",
  ]
}
